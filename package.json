{
  "name": "customermanager",
  "version": "1.0.0",
  "description": "Customer Management Desktop App with Electron",
  "main": "config/main.js",
  "scripts": {
    "start-dev": "nodemon --watch * --exec \"electron .\"",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mestanza-93/customer-manager.git"
  },
  "keywords": [
    "electronJS"
  ],
  "author": "Pablo Mestanza",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mestanza-93/customer-manager/issues"
  },
  "homepage": "https://github.com/mestanza-93/customer-manager#readme",
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "electron-forge": "^5.2.4",
    "electron-prebuilt-compile": "4.0.0",
    "nodemon": "^2.0.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.11.2",
    "@fullcalendar/bootstrap": "^4.3.0",
    "@fullcalendar/core": "^4.3.1",
    "@fullcalendar/daygrid": "^4.3.0",
    "bootstrap": "^4.4.1",
    "bootstrap-datepicker": "^1.9.0",
    "datatables.net": "^1.10.20",
    "datatables.net-bs4": "^1.10.20",
    "electron-compile": "^6.4.4",
    "electron-squirrel-startup": "^1.0.0",
    "hazardous": "^0.3.0",
    "jquery": "^3.4.1",
    "nedb": "^1.8.0",
    "popper.js": "^1.16.0",
    "toastr": "^2.1.4"
  },
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "linux": [
          "deb"
        ]
      },
      "electronPackagerConfig": {
        "quiet": true,
        "asar": true,
        "icon": "build/icon.ico",
        "win32metadata": {
          "CompanyName": "Mestanza",
          "ProductName": "CustomerManager"
        }
      },
      "electronWinstallerConfig": {
        "name": "customermanager",
        "setupIcon": "build/icon.ico",
        "iconURL": "/home/mestanza/workspace/electron/customer-manager/build/icon.ico",
        "setupExe": "setup.exe",
        "setupMSI": "setup.msi",
        "noMsi": false
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "customermanager"
      }
    }
  }
}
